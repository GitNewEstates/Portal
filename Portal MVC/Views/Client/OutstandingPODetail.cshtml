@using Portal_MVC.Models
@model Portal_MVC.Models.OutstandPOListViewModel
@{
    ViewBag.Title = "Outstanding PO Details";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div>
    @Html.EJS().Grid("Grid").DataSource(Model.OutstaningPurchaseOrderList).AllowPdfExport().ToolbarClick("toolbarClick").Columns(col =>
{

    col.Field("id").HeaderText("Invoice Date").Width("60").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Left).Add();
    col.Field("RaiseDate").HeaderText("Date").Width("80").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Left).Format(new { type = "dateTime", format = "dd/MM/yyyy" }).Add();
    col.Field("POHeader").HeaderText("Header").Width("180").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Left).Add();
    col.Field("TotalCostStr").HeaderText("Value").Width("75").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Left).Add();

}).AllowPaging(true).PageSettings(page => page.PageSize(25)).AllowFiltering(true).AllowSorting(true).EditSettings(edit => { edit.AllowEditing(false).Mode(Syncfusion.EJ2.Grids.EditMode.Normal); }).Toolbar(new List<string>() { "PdfExport" }).TextWrapSettings(text => { text.WrapMode(Syncfusion.EJ2.Grids.WrapMode.Content); }).Render()
</div>


<script>


    function toolbarClick(args) {
        var gridObj = document.getElementById("Grid").ej2_instances[0];
        if (args.item.id === 'Grid_pdfexport') {
            gridObj.pdfExport();
        }
    }
</script>

