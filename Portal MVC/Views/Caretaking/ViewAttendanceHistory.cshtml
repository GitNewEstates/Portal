@using Portal_MVC.Models
@model Portal_MVC.Models.AttendanceHistoryViewModel
@{
    ViewBag.Title = "Attendance History";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


@if (Session["SelectedPropertyID"] == null || (int)Session["SelectedPropertyID"] == 0)
{
    <div class="container">
        @Html.Partial("_SelectEstate", Model.PropListViewModel)
    </div>
}
else
{
    <div class="row">
        <div class="container">
            @if (Model.AttendanceList != null && Model.AttendanceList.Count > 0)
            {
                <div class="panel GradientBackground panelContainer">
                    <table class="LinkedTable tableHover">
                        <tbody>
                            @foreach (AttendanceVisits.AttendanceVisits visit in Model.AttendanceList)
                            {
                            <tr>
                                <td class="PropSelection">@Html.ActionLink(linkText: visit.VisitDate.ToLongDateString(),
                                                         actionName: "AttendanceDetail",
                                                         routeValues: new { VisitID = visit.id },
                                                         htmlAttributes: null)</td>
                                <td class="PropSelection" style="margin-left:10px">@visit.AttendanceStr</td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="container">
                    <div class="panel GradientBackground col-lg-3 col-md-6 col-sm-10 col-xs-12" style="padding:15px;">
                        <h4>No Attendance History</h4>
                    </div>
                </div>
            }
        </div>
    </div>

}