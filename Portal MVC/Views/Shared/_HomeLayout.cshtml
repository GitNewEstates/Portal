        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2 sidebar" id="sideNav" style="min-width: 175px">

                @Html.Partial("_MainMenu")

            </div>
        </div>
    </div>

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 RenderBodyContainer">
        <div style="" id="body">

            @RenderBody()
