@model Portal_MVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="LogoBackground">
    <div class="row">

        


        <div class="ControlsContainer" id="LoginControls">

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Create New Account</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })

      

                <div class="form-group">

                <div class="row">
                    <div class="form-group">
                        @Html.EJS().TextBoxFor(model => model.Email).Placeholder("Email").Render()
                    </div>

                </div>

                <div class="row">
                    <div class="form-group">
                        @Html.EJS().TextBoxFor(model => model.Name).Placeholder("Name").Render()
                    </div>

                </div>

                <div class="row">
                    <div class="form-group">
                        @Html.EJS().DropDownList("Description").Placeholder("Which best describes you?").DataSource(Model.DescriptionList).Fields(new Syncfusion.EJ2.DropDowns.DropDownListFieldSettings { Value = "Description" }).Render()
                    </div>

                </div>

                <div class="row">
                    <div class="form-group">
                        @Html.EJS().TextBoxFor(model => model.Password).Placeholder("Password").Type("Password").Render()
                    </div>

                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.EJS().TextBoxFor(model => model.ConfirmPassword).Placeholder("Confirm Password").Type("Password").Render()
                    </div>

                </div>


            </div>
              

                <div class="form-group">
                    <div class="">
                        <input type="submit" class="btn btn-default customButton" value="Register" />
                    </div>
                </div>
             }

        </div>
    </div>
</div>

<style>
    .LogoBackground {
        display: flex !important;
        text-align: center;
        justify-content: center;
        height: 80vh;
        align-items: center;
    }

    .ControlsContainer {
        display: flex;
        text-align: center;
    }


    .control-label {
        margin-bottom: 10px;
    }

    .customButton {
        margin-right: 25px;
    }


    input {
        max-width: 100%;
    }

    #Description {
        max-width: 100%;
    }

    .e-input-group {
        max-width: 100%;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
