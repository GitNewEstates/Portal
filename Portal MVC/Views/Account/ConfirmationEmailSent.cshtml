
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


@model Portal_MVC.Models.ConfirmEmailViewModel

<div class="LogoBackground">
    <div class="row">

        <div class="col-lg-6 col-md-8 col-sm-10 col-xs-10  email-sent-container">

            <img class=".img-responsive  EmailImg" src="https://nemstorage123.blob.core.windows.net/webassets/email.svg?sp=r&st=2021-08-22T14:50:17Z&se=2025-08-22T22:50:17Z&spr=https&sv=2020-08-04&sr=c&sig=W9HJyels24JJ0rJapfB0gmoYEFeVxdfuf%2FjEKAmz8KE%3D" alt="EmailSent">
            <div class="EmailSentText">
                <h4>An email has been sent to @Model.Email. Please click the link to confirm your account.<\br></h4>
                <h4>Not received anything? Click the button below to resend.</h4>

            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-md-12 email-sent">
                        <input type="submit" value="Re Send" class="btn btn-default customButton" id="ResendButton" />
                    </div>
                </div>
            </div>

            <div class="EmailSentText" id="ResentConfirmation" style="display: none;">
                <h4>A Confirmation Email has been re sent to @Model.Email</h4>
            </div>

            <div class="EmailSentText" id="AlreadyConfirmed" style="display: none;">
                <h4>The email address @Model.Email has already been confirmed.</h4>
            </div>
        </div>

    </div>
</div>

    <style>
        .email-sent-container {
            width: 100%;
            min-width: 100%;
            margin-top: 18px;
            text-align: center;
            min-height: 70vh;
            display: block;
            padding-top: 4%;
        }

        .email-sent {
            display: block;
            text-align: center;
        }

        .EmailSentText {
            text-align: center;
        }

        .EmailImg {
            height: 25vh;
        }
    </style>

