@using Portal_MVC.Models

@model Portal_MVC.Models.RepairDetailViewModel

@{
    ViewBag.Title = "Repair Detail - New Estates";
}


@if (Model != null)
{
        <div class="Full-Width-Container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 e-card e-custom-card detail-card">
                    <div class="detail-card-header">
                        <h4>
                            @Model.Repair.RepairTitle
                        </h4>
                    </div>
                    <div class="detail-card-detail">
                        <h5>
                            @Model.Repair.RepairDetails
                        </h5>
                    </div>
                    <div class="detail-card-inner-twocol">
                        <div class="detail-card-inner-col1">Raised Date: </div>
                        <div class="detail-card-inner-col2">@Model.Repair.RaisedDateStr </div>
                    </div>
                    <div class="detail-card-inner-twocol">
                        <div class="detail-card-inner-col1">Target Date: </div>
                        <div class="detail-card-inner-col2">@Model.Repair.TargetDateStr</div>
                    </div>

                    <div class="detail-card-inner-twocol">
                        <div class="detail-card-inner-col1">Status: </div>
                        <div class="detail-card-inner-col2">@Model.Repair.RepairStatus</div>
                    </div>

                    @if (Model.Repair.EstimatedAmount > 0)
                    {
                        <div class="detail-card-inner-twocol">
                            <div class="detail-card-inner-col1">Estimated Cost: </div>
                            <div class="detail-card-inner-col2">@Model.Repair.EstimatedAmountStr</div>
                        </div>
                    }

                </div>

                <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 e-card e-custom-card detail-card">
                    <div class="detail-card-header">
                        <h4>
                            Originating Report
                        </h4>
                    </div>
                    <div class="detail-card-detail">
                        <h5>
                            @Model.Repair.CallReport.ReportTitle
                        </h5>
                    </div>
                    <div class="detail-card-inner-twocol">
                        <div class="detail-card-inner-col1">Report Date: </div>
                        <div class="detail-card-inner-col2">@Model.Repair.CallReport.ReportDateStr </div>
                    </div>
                    <div class="detail-card-inner-twocol">
                        <div class="detail-card-inner-col1">Report Details </div>
                        <div class="detail-card-inner-col2"><h5>@Model.Repair.CallReport.ReportDetails</h5></div>
                    </div>

                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    @Html.EJS().Grid("Grid").DataSource(Model.Repair.RepairUpdateList).Columns(col =>
                    {
                        col.Field("DateStr").HeaderText("Date").Width("100").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Left).AllowEditing(false).Add();
                        col.Field("Note").HeaderText("Note").Width("300").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Left).Add();
                    }).AllowPaging(true).PageSettings(page => page.PageSize(25)).EditSettings(edit => { edit.AllowEditing(false).Mode(Syncfusion.EJ2.Grids.EditMode.Normal); }).TextWrapSettings(text => { text.WrapMode(Syncfusion.EJ2.Grids.WrapMode.Content); }).Render()
                </div>
            </div>
        </div>


          


            }


<style>
    .detail-card {
        
        padding-left: 15px;
        padding-top: 10px;
        padding-bottom: 10px;
    }

    .detail-card-inner-twocol {
        display: inline-flex;
        flex-direction: row;
        justify-content: flex-start;
    }
    
    .detail-card-inner-col1{
        min-width: 40%;
        max-width: 50%;
        margin-right: 15px;
    }
    .detail-card-inner-col2 {
        min-width: 50%;
        max-width: 60%;
        margin-left: 15px;
    }


    .detail-card-header{
        text-align: center;
    }

    .detail-card-detail {
        justify-content: center;
        margin-bottom: 5px;
        text-align: center;
    }
</style>
