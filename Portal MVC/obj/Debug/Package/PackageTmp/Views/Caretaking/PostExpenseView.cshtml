<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">


            <div class="row">
                <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    @Html.EJS().DatePicker("datetimepicker").Max(Model.MaxDate).Value(Model.ExpenseDate).Format("dd-MM-yyyy").HtmlAttributes(DatehtmlAttr).Render()
                </div>

            </div>

            <div class="row">
                <div class="form-group col-lg-6 col-md-12 col-sm-12 col-xs-12">
                    <h5>Supplier</h5>
                    @Html.DropDownListFor(m => m.SelectedSupplierID, Model.SupplierList, new { @class = "form-control", @id="ExpenseSupplierList" })
                </div>

            </div>

            <div class="row">

                <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <h5>Cost</h5>
                    @Html.EJS().NumericTextBox("numeric").Value(0).HtmlAttributes(htmlAttr).Render()
                </div>

            </div>

            <div class="row">
                <div class="form-group col-lg-6 col-md-12 col-sm-12 col-xs-12">
                    <h5>Payment Type</h5>
                    @Html.DropDownListFor(m => m.PaymentMethod, Model.PaymentTypeList, new { @class = "form-control", @id = "ExpensePaymentTypeList" })
                </div>

            </div>

            <div class="row">

                <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <h4>Description</h4>
                    @Html.EJS().TextBox("default").Multiline(true).HtmlAttributes(DescriptionhtmlAttr).Render()

                </div>

            </div>

        </div>




        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">

            <div class="row">
                <div class="form-group col-lg-6 col-md-12 col-sm-12 col-xs-12">
                    <h5>Funds</h5>
                    @Html.DropDownListFor(m => m.SelectedFundID, Model.FundList, new { @class = "form-control", @id = "FundSelected" })
                </div>

            </div>

            <div class="row">
                <div class="form-group col-lg-6 col-md-12 col-sm-12 col-xs-12">
                    <h5>Budgets</h5>
                    <select class="form-control" id="BudgetList"></select>
                </div>

            </div>

            <div class="row">

                <div class="form-group col-lg-6 col-md-12 col-sm-12 col-xs-12">
                    <h5>Schedules</h5>
                    <select class="form-control" id="ScheduleList"></select>
                </div>

            </div>

            <div class="row">

                <div class="form-group col-lg-6 col-md-12 col-sm-12 col-xs-12">
                    <h5>Heading</h5>
                    <select class="form-control" id="HeadingList"></select>
                </div>

            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="row">

                <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <button class="btn btn-primary mb-2" style="display: inline;
                            margin-top: 5px" id="SelectImg1">
                            <img src="/Assets/upload (1).svg" style="height:
                            25px; width:25px;" id="SelectImg1" />
                        </button>
                        <button class="btn btn-primary mb-2" style="display: inline;
                            margin-top: 5px" id="btnExpenseComplete">
                            Complete

                        </button>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="panel panel-primary" id="ExpenseSuccessMessage" style="display: none;">
                        <div class="panel-heading">
                            Expense Successfully Submitted
                        </div>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="panel panel-danger" id="ExpenseFailMessage" style="display: none;">
                        <div class="panel-heading">
                            Error Submitting Expense
                        </div>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin: 10px;">
                    <div id="ImgageContainer" style="display:block;">

                    </div>
                </div>
            </div>

        </div>
    </div>

</div>



    <style>
        #multiline {
            height: 100px;
        }
    </style>








