@using Portal_MVC.Models
@model Portal_MVC.Models.PostExpenseViewModel
@{
    ViewBag.Title = "Post Expense";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    IDictionary<string, object> htmlAttr = new Dictionary<string, object>();
    htmlAttr.Add("id", "ExpenseCostTextBox");

    IDictionary<string, object> DescriptionhtmlAttr = new Dictionary<string, object>();
    DescriptionhtmlAttr.Add("id", "ExpenseDescriptionTextbox");

    IDictionary<string, object> DatehtmlAttr = new Dictionary<string, object>();
    DatehtmlAttr.Add("id", "ExpensePaidDate");
}



