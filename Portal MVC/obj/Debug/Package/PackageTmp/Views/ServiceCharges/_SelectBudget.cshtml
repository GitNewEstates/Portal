@using Portal_MVC.Models
@model Portal_MVC.Models.ServiceChargeBudgetViewModel



<div class="container">
    <h5>Select the budget that you wish view.</h5>
    <div class="panel GradientBackground panelContainer">
        <table class="LinkedTable tableHover">
            <tbody>
                @if (Model != null && Model.Estate.BudgetList != null)
                {

                    foreach (Estates item in Model.Estate.BudgetList)
                    {
                        <tr>

                            @if (!string.IsNullOrWhiteSpace(item.FundName))
                            {
                                <td>@Html.ActionLink(item.FundName, Model.ViewName, Model.ControllerName, new { BudgetID = item.BudgetId }, null)</td>
                            }

                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>

