@model Portal_MVC.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password";
}

<div class="LogoBackground">
    <div class="row">
            <div class="ControlsContainer">
                

                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label", id = "formText" })
                        
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "CustomTextBox" })
                     
                        
                        
                    </div>
                    <div class="form-group">
                        <div class="">
                            <input type="submit" class="btn btn-default customButton" value="Email Link" />
                        </div>
                    </div>
                }
            </div>
        
    </div>

</div>

<style>
    .LogoBackground{
        display: flex !important;
        text-align: center;
        justify-content: center;
        height: 80vh;
        align-items: center;
        
    }
    .ControlsContainer{
        display: flex;
        text-align: left;
    }

    #CustomTextBox {
        margin: 0px !important;
        min-width: 300px;
    }

    .control-label{
        margin-bottom: 10px;
    }
    .customButton{
        margin-right: 25px;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
