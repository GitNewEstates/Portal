@model Portal_MVC.Models.TermsAgreedViewModel
@{
    ViewBag.Title = "Terms";

}




<div class="LogoBackground">
    
        <div class="ControlsContainer col-lg-12 col-md-12 col-sm-12 col-xs-12">
            
            @using (Html.BeginForm("Terms", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            <div class="controls col-lg-10 col-md-10 col-sm-10 col-xs-12">
                <h3>Terms and Conditions</h3>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(m => m.Email);
                <div class="form-group" style="height: 100%">
                    @Html.TextAreaFor(m => m.Terms, new { @class = "form-control terms", id = "CustomTextBox" })

                </div>

                <div class="form-group">
                    @Html.EJS().CheckBox("cbox2").Name("TermsList").Label("Agree").Value("Agreed").Render()
                    @Html.EJS().CheckBox("cbox3").Name("TermsList").Label("Decline").Value("Declined").Render()
                </div>

                <div class="form-group">
                    <div class="">
                        <input type="submit" class="btn btn-default customButton" value="Submit" />
                    </div>
                </div>
            </div>
                 
            }
        </div>
   
</div>

<style>
    form{
        width: 100%;
        justify-content: center;
        display: flex;
    }
    .LogoBackground {
        display: flex !important;
        text-align: center;
        justify-content: center;
        height: 80vh;
        align-items: flex-start;
    }

    .ControlsContainer {
        display: flex;
        text-align: center;
        height: 70%;
    }

    .controls{

    }

    .terms {
        width: 100% !important;
        max-width: 100% !important;
        min-width: 100% !important;
        height: 100% !important;
        min-height: 100% !important;
        max-height: 100% !important;
    }
</style>

<script>

    var textarea = document.getElementById("CustomTextBox");
    textarea.setAttribute('readonly', 'readonly');

    
</script>