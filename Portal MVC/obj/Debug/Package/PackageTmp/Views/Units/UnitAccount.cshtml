@using Portal_MVC.Models;
@model Portal_MVC.Controllers.UnitDetailViewModel
@{
    ViewBag.Title = "UnitAccount";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="Full-Width-Container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="control-section e-tab-section">
                <div class="e-sample-resize-container">
                    <div id="unit-details" style="display: none">
                        <div class="response-align">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 e-card e-custom-card">

                                        @if (Model.unit.APIError.HasError)
                                        {
                                            <div class="unit-details-container">
                                                <h4> Error obtaining Owner's details.</h4>
                                                @if (!string.IsNullOrWhiteSpace(Model.unit.APIError.Message))
                                                {
                                                    <h4>@Model.unit.APIError.Message</h4>
                                                }
                                            </div>

                                        }
                                        else
                                        {
                                            <div class="unit-details-container">
                                                <h5 style="display: none;" id="unit-id">@Model.unit.id</h5>
                                                <h5>@Model.unit.Name</h5>
                                                <h5>@Model.unit.Address1</h5>
                                                <h5>@Model.unit.Address2</h5>
                                                <h5>@Model.unit.Address3</h5>
                                                <h5>@Model.unit.Address4</h5>
                                                <h5>@Model.unit.PostCode</h5>
                                            </div>

                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="unit-statement" style="display: none">
                        <div class="response-align">
                            <div>
                                @Html.Partial("_UnitStatement", Model.StatementViewModel)
                            </div>
                        </div>
                    </div>

                </div>
                @Html.EJS().Tab("ej2Tab").Height("auto").Items(Model.TabHeaders).Render()
            </div>
        </div>
    </div>
</div>

<style>
    .unit-details-container {
        text-align: left;
    }

    .e-tab-section .e-tab .e-content.e-control {
        overflow-x: hidden;
        overflow-y: auto;
    }

    .responsive-align {
        width: 100%;
        margin: 0 auto;
    }

    .e-tab-section {
        padding: 0 15px;
    }

    .e-tab .e-tab-header {
        /*background: #badfba !important;*/
        text-align: center;
    }
</style>


