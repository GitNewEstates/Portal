@using Portal_MVC.Models
@model Portal_MVC.Models.MyChangePasswordViewModel



@*Password Change*@

@using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post))
{
    <div class="container">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" style="margin-bottom: 50px; width:440px">
            <div class="GradientBackground">

                @Html.ValidationSummary(false, "", new { style = "margin-top: 15px" })

                <div class="row">
                    <div class="centreLable148">
                        <h4>
                            Change Password
                        </h4>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group" style="margin-bottom: 10px; margin-top:25px; padding-bottom: 25px;">
                        @if (Model != null)
                    {
                    <label class="Centre">Current Password</label>
                    @Html.PasswordFor(m => m.OldPass, new { @class = "form-control Centre", id = "CustomTextBox" })
                    @*@Html.ValidationMessageFor(m => m.OldPassword, "", new { })*@

                    <label class="Centre">New Password</label>
                    @Html.PasswordFor(m => m.NewPass, new { @class = "form-control Centre", id = "CustomTextBox" })
                    @*@Html.ValidationMessageFor(m => m.NewPassword, "", new {  })*@

                    <label class="Centre">Confirm New Password</label>
                    @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control Centre", id = "CustomTextBox" })
                        if (!string.IsNullOrWhiteSpace(Model.SuccessPasswordUpdateMessage))
                        {
                    <p style="width: 300px; margin-right:auto; margin-left:auto;">@Model.SuccessPasswordUpdateMessage</p>
                        }

                    }


                    </div>

                </div>
            </div>



            <div class="row">
                <div class="centreButton" style="margin-top: 10px;">
                    <button class="btn btn-primary " type="submit" value="UpdateAddress" , id="customButton">Change Password</button>
                </div>
            </div>


        </div>

    </div>
}
